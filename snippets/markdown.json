{
	"link": {
		"prefix": "link",
		"body": [
			"[${1:LinkText}](${2:URL})"
		]
	},
	"image": {
		"prefix": "image",
		"body": [
			"![${1:LinkText}](${2:URL})"
		]
	},
	"table": {
		"prefix": "table",
		"body": [
			"|  x  |  y  |  z  |",
			"| --- | --- | --- |",
			"|     |     |     |"
		]
	},
	// mermaid
	"mermaid": {
		"prefix": "mermaid",
		"body": [
			"```mermaid",
			"$0",
			"```"
		]
	},
	"theme(mermaid)": {
		"prefix": "mermaid_theme",
		"body": [
			"%%{init:{'theme':'base','themeVariables':{'primaryColor':'#ececff', 'tertiaryColor':'#fafafa'}}}%%"
		]
	},
	"flowchart(mermaid)": {
		"prefix": "flowchart",
		"body": [
			"```mermaid",
			"flowchart LR",
			"\t${1:x[x] --> y(y) --> z[[z]]}",
			"```"
		]
	},
	"flowchart(mermaid/html)": {
		"prefix": "flowchart_html",
		"body": [
			"<div class=\"mermaid\">",
			"flowchart LR",
			"\t${1:x[x] --> y(y) --> z[[z]]}",
			"</div>"
		]
	},
	"sequence(mermaid)": {
		"prefix": "sequence",
		"body": [
			"```mermaid",
			"sequenceDiagram",
			"\t${1:A ->> +B: input",
			"\tB -->> -A: output}",
			"```"
		]
	},
	"sequence(mermaid/html)": {
		"prefix": "sequence_html",
		"body": [
			"<div class=\"mermaid\">",
			"sequenceDiagram",
			"\t${1:A ->> +B: input",
			"\tB -->> -A: output}",
			"</div>"
		]
	},
	"ganttchart(mermaid)": {
		"prefix": "ganttchart",
		"body": [
			"```mermaid",
			"gantt",
			"title ${1:Title}",
			"excludes weekends",
			"dateFormat YYYY-MM-DD",
			"axisFormat %m/%d",
			"",
			"section Section",
			"\tTaskA               : done     , TaskA, 2024-01-01, 2024-01-05",
			"\tTaskB               : active   , TaskB, 2024-01-05, 2024-01-15",
			"\tTaskC               : crit     , TaskC, 2024-01-15, 2024-01-30",
			"\tTaskX               : milestone, TaskX, 2024-01-31, 2024-01-31",
			"```"
		]
	},
	"ganttchart(mermaid/html)": {
		"prefix": "ganttchart_html",
		"body": [
			"<div class=\"mermaid\">",
			"gantt",
			"title ${1:Title}",
			"excludes weekends",
			"dateFormat YYYY-MM-DD",
			"axisFormat %m/%d",
			"",
			"section Section",
			"\tTaskA               : done     , TaskA, 2024-01-01, 2024-01-05",
			"\tTaskB               : active   , TaskB, 2024-01-05, 2024-01-15",
			"\tTaskC               : crit     , TaskC, 2024-01-15, 2024-01-30",
			"\tTaskX               : milestone, TaskX, 2024-01-31, 2024-01-31",
			"</div>"
		]
	},
	// marp
	"marp template": {
		"prefix": "marp",
		"body": [
			"---",
			"marp: true",
			"theme: sample",
			"paginate: true",
			"size: 16:9",
			"---",
			"<!--",
			"_class: title",
			"_paginate: skip",
			"-->",
			"",
			"# title",
			"",
			"---",
			"",
			"<!--",
			"class: slide",
			"-->",
			"# slide1",
			"",
			"---",
			"",
			"# slide2",
			"",
			"---",
			"<!--",
			"_class: end",
			"_paginate: skip",
			"-->",
			"",
			"# end"
		]
	}
}
