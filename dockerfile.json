{
	"ubuntu20": {
		"prefix": "ubuntu20.04",
		"body": [
			"FROM ubuntu:20.04",
			"",
			"ENV DEBIAN_FRONTEND=noninteractive",
			"",
			"WORKDIR /workspace",
			"RUN apt-get update \\",
			"\t&& apt-get install -y tzdata"
		]
	},
	"ubuntu18": {
		"prefix": "ubuntu18.04",
		"body": [
			"FROM ubuntu:18.04",
			"",
			"ENV DEBIAN_FRONTEND=noninteractive",
			"",
			"WORKDIR /workspace",
			"RUN apt-get update \\",
			"\t&& apt-get install -y tzdata"
		]
	},
	"nvidia-cuda": {
		"prefix": "nvidia-cuda",
		"body": [
			"FROM nvidia/cuda:11.4.0-devel-ubuntu20.04",
			"",
			"ENV DEBIAN_FRONTEND=noninteractive",
			"",
			"WORKDIR /workspace",
			"RUN apt-get update \\",
			"\t&& apt-get install -y tzdata"
		]
	},
	"apt-get python": {
		"prefix": "apt-get python",
		"body": [
			"RUN apt-get update \\",
			"\t&& apt-get install -y build-essential git python python3-pip",
			"",
			"RUN unlink /usr/bin/python \\",
			"\t&& ln -s /usr/bin/python3 /usr/bin/python",
			"",
			"COPY requirements.txt /tmp/",
			"RUN pip install --no-cache-dir -r /tmp/requirements.txt \\",
			"\t&& rm /tmp/requirements.txt"
		]
	},
	"apt-get python(pytorch/cpu)": {
		"prefix": "apt-get python(pytorch/cpu)",
		"body": [
			"RUN apt-get update \\",
			"\t&& apt-get install -y build-essential git python python3-pip",
			"",
			"COPY requirements.txt /tmp/",
			"RUN pip install --no-cache-dir -r /tmp/requirements.txt -f https://download.pytorch.org/whl/cpu/torch_stable.html \\",
			"\t&& rm /tmp/requirements.txt"
		]
	},
	"apt-get python(pytorch)": {
		"prefix": "apt-get python(pytorch)",
		"body": [
			"RUN apt-get update \\",
			"\t&& apt-get install -y build-essential git python python3-pip",
			"",
			"COPY requirements.txt /tmp/",
			"RUN pip install --no-cache-dir -r /tmp/requirements.txt \\",
			"\t&& rm /tmp/requirements.txt"
		]
	},
	"python": {
		"prefix": "python3.9",
		"body": [
			"FROM python:3.9",
			"",
			"ADD requirements.txt /",
			"RUN pip install --no-cache-dir -r requirements.txt"
		]
	},
	"cmake": {
		"prefix": "cmake",
		"body": [
			"RUN apt-get update \\",
			"\t&& apt-get upgrade -y \\",
			"\t&& apt-get install -y build-essential git libssl-dev",
			"RUN git clone https://github.com/Kitware/CMake.git \\",
			"\t&& cd CMake \\",
			"\t&& ./bootstrap \\",
			"\t&& make \\",
			"\t&& make install \\",
			"\t&& cd /"
		]
	}
}
